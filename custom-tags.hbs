{{!< default}}

{{#post}}
<div class="content-area">
    <main class="site-main">
        {{> content width="wide"}}
        <div class="post-feed container medium">
            {{#get 'tags' limit='all' include='count.posts' order='published_at asc'}}
                {{#foreach tag}}
                    <article class="feed {{post_class}}">
                        <div class="feed-calendar">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z">
                                
                            </path>
                            </svg>
                        </div>
                        <h2 class="feed-title">{{name}}</h2>
                        <div class="feed-right">
                            <div class="feed-length">
                                {{plural count.posts empty='No Lessons' singular='% Lesson' plural='% Lessons'}} ðŸ¥‹
                            </div>
                        </div>
                        <svg class="icon feed-icon">
                            <use xlink:href="#chevron-right"></use>
                        </svg>
                        <a class="u-permalink" href="{{url}}" aria-label="{{name}}"></a>
                    </article>
                {{/foreach}}
            {{/get}}
        </div>
    </main>
</div>
{{/post}}